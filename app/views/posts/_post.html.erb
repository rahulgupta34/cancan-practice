
<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>User Email</strong>
    <%= post.user.email %>
  </p>

  <p>
  <% if post.comments.any? %>
        <h1>Comments</h1>
        <% post.comments.each do |comment_post| %> 
           <p><%= time_ago_in_words(comment_post.created_at) %>   ago</p> 
           <p><b>comment</b>:<%= comment_post.comment %>  ago</p> 
           <% if can? :destroy, post.comments %>
           <%= button_to "Delete Comment", post_comment_path(post,comment_post.id), method: :delete %>
           <% end %>
        <% end %>
  <% end %>
  </p>

  <h1>add comment</h1>
  <%= form_with model: [post, post.comments.build]  do |form| %>
    <div>
      <%= form.label :comment %>
      <%= form.text_field :comment %>
    </div>

    <br>

    <div>
      <%= form.submit "add comment" %>
    </div>

  <% end %>

</div>
