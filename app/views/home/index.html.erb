<h1 class="text-center"> Home </h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Body</th>
      <th scope="col">User Email</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.user.email %></td>
     
    </tr>
  
    <% end %>
  </tbody>
</table>

  